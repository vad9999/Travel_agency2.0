<Window x:Class="Travel_agency.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Travel_agency"
        mc:Ignorable="d"
        Title="SignUp" Height="500" Width="850">
    <Grid>
        <Canvas>
            <Button x:Name="LogInButton" Content="Войти" Canvas.Left="617" Canvas.Top="10" FontSize="20" Height="60" Width="200" Click="LogInButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button x:Name="SignUpButton" Content="Зарегистрироваться" Canvas.Left="617" Canvas.Top="407" Height="60" Width="200" FontSize="20" Click="SignUpButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="NameBox" Canvas.Left="300" TextWrapping="Wrap" Text="Введите имя" Canvas.Top="140" Width="234" FontSize="20" Height="35" HorizontalAlignment="Left" VerticalAlignment="Center" GotFocus="NameBox_GotFocus" LostFocus="NameBox_LostFocus"/>
            <TextBox x:Name="EmailBox" Canvas.Left="300" TextWrapping="Wrap" Text="Введите адрес эл. почты" Canvas.Top="190" Width="234" Height="35" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" GotFocus="EmailBox_GotFocus" LostFocus="EmailBox_LostFocus"/>
            <TextBox x:Name="PasswordBox" Canvas.Left="300" TextWrapping="Wrap" Text="Введите пароль" Canvas.Top="240" Width="234" Height="35" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
            <CheckBox x:Name="DataProcessingCheck" Content="" Canvas.Left="521" Canvas.Top="325" Height="20" Width="23" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.522,0.352"/>
            <Label x:Name="dataProcessingLabel" Content="Согласен(а) на обработку персональных данных" Canvas.Left="150" Canvas.Top="315" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>

    </Grid>
</Window>
